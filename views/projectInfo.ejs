        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-gray btn-lg" data-bs-toggle="modal" data-bs-target="#myModal">Vizualizare
            factura</button>
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
