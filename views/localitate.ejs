<%- layout('layouts/boilerplate') %>
<% if (projects.length !=0) { %>
    <div class="row container" style="width: 100%; margin-inline: auto;">
        <h1 class="text-center mt-5">Toate proiectele in desfasurare in localitatea <%= currentLocation[0].name %></h1>
        <div class="container d-flex flex-column flex-xl-row align-items-center">
            <% for (let i=0; i < projects.length; i++) {%>
                <div class="col p-5 d-flex flex-column align-items-center">

                    <div class="card" style="width: 100%">
                        <img class="card-img-top " src="<%= projects[i].image%>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=projects[i].name%>
                            </h5>
                            <p class="card-text">
                                <%= projects[i].description %>
                            </p>
                            <a href="/location/<%= currentLocation[0].name %>/<%=projects[i].id%>"
                                class="btn btn-primary">Informatii</a>
                        </div>
                    </div>

                </div>
                <% } %>
        </div>
    </div>
<% } else { %>
    <div class="container">
        <div class="row">
           <div class="col-12">
                <h1 class="text-center mt-5 pt-5">Momentan nu exista proiecte</h1>
               <h1 class="text-center">in desfasurare in localitatea <%= currentLocation[0].name %></h1>
            </div>
        </div>
    </div>
<% } %>
    